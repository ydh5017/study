{{>layout/header}}
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">메인페이지</h1>
    </div>
{{#userVO}}
    {{#isReleased}}
    {{/isReleased}}
    {{^isReleased}}
        <a href="/user">로그인</a>
    {{/isReleased}}
{{/userVO}}
    <div class="container">
        <div class="card border-left h-10 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="border-bottom mb-3">
                            <div class="text-xl-left font-weight-bold text-primary text-uppercase mb-3">
                                <div class="text-left" style="float: left">
                                    <h1 class="h3 mb-0 text-gray-800">인기글</h1>
                                </div>
                                <div class="text-right ml-2" style="float: left">
                                    <ul class="pagination" id="postTypeUl">
                                        <li class="paginate_button page-item active" id="week"
                                            onclick="return setPostType('week')">
                                            <a aria-controls="dataTable" tabindex="0" class="page-link">주간</a>
                                        </li>
                                        <li class="paginate_button page-item" id="day"
                                            onclick="return setPostType('day')">
                                            <a aria-controls="dataTable" tabindex="0" class="page-link">일간</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="text-xl text-right font-weight-bold text-uppercase mb-3 mr-4">
                                <a href="/post?postType=week&cateCode=100&pno=1" id="href">더보기</a>
                                <i class="fas fa-angle-right"></i>
                            </div>
                        </div>
                        <table class="board_list" id="table">
                            <colgroup>
                                <col width="6%"/>
                                <col width="15%"/>
                                <col width="5%"/>
                                <col width="5%"/>
                                <col width="8%"/>
                                <col width="15%"/>
                            </colgroup>
                            <thead>
                            <tr>
                                <th scope="col">카테고리</th>
                                <th scope="col">제목</th>
                                <th scope="col">조회수</th>
                                <th scope="col">좋아요</th>
                                <th scope="col">작성자</th>
                                <th scope="col">작성일</th>
                            </tr>
                            </thead>
                            <tbody id="tbody">
                            {{#postList}}
                            <tr>
                                <input type="hidden" id="postSeq" name="postSeq" value="{{postSeq}}">
                                <td style="color: #2a96a5">{{cateName}}</td>
                                <td onclick="location.href='post/detail?no={{postSeq}}'">{{title}}</td>
                                <td><i class="fas fa-eye"></i> {{views}}</td>
                                <td><i class="fas fa-thumbs-up"></i> {{likes}}</td>
                                <td>{{writeId}}</td>
                                <td>{{writeDt}}</td>
                            </tr>
                            {{/postList}}
                            {{^postList}}
                            <tr>
                                <td colspan="4">조회된 결과가 없습니다.</td>
                            </tr>
                            {{/postList}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/main.js"></script>
<!-- /.container-fluid -->
{{>layout/footer}}